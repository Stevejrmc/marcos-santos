<div class="modal fade" id="registration" aria-hidden="true" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <a href="#" data-bs-toggle="modal" data-bs-target="#sign-in">back to login</a>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/auth/register" method="POST" class="needs-validation registration-form" novalidate>
          <div class="row">
            <div class="col">
              <label for="firstName" class="col-form-label">first name*</label>
              <input type="text" autocomplete="name" class="form-control" id="first-name" name="firstName" required/>
              <div class="invalid-feedback">
                Please enter your first name
              </div>
            </div>
            <div class="col">
              <label for="lastName" class="col-form-label">last name*</label>
              <input type="text" autocomplete="family-name" class="form-control" id="last-name" name="lastName" required/>
              <div class="invalid-feedback">
                Please enter your last name
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label for="email" class="col-form-label">email*</label>
              <input type="email" autocomplete="username" class="form-control" id="email" name="email" required/>
              <div class="invalid-feedback">
                Please enter your email address
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label for="password" class="col-form-label">password*</label>
              <input type="password" class="form-control" id="password" name="password" aria-describedby="password-help" autocomplete="new-password" required/>
              <div class="invalid-feedback">
                Please enter your password
              </div>
              <div id="password-help" class="form-text">
                Minimum 8 characters
              </div>
            </div>
          <div class="row">
            <div class="col">
              <label for="confirmPassword" class="col-form-label">confirm password*</label>
              <input type="password" class="form-control" id="confirm-password" name="confirmPassword" autocomplete="new-password" required/>
              <div class="invalid-feedback">
                Please confirm your password
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label for="country" class="col-form-label">country*</label>
              <input class="form-control" autocomplete="country" id="country" name="country" required/>
              <div class="invalid-feedback">
                Please enter your country
              </div>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-12">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                <label class="form-check-label" for="invalidCheck">
                  I have read and agree to terms of use and privacy policy
                </label>
                <div class="invalid-feedback">
                  You must agree before submitting.
                </div>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>